{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "make -C ${workspaceFolder}/firmware/myStorm -j23",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/firmware/myStorm"
        ]
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "clean",
      "group": "build",
      "type": "shell",
      "command": "make -C ${workspaceFolder}/firmware/myStorm clean",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/firmware/myStorm"
        ]
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "oflash",
      "group": "build",
      "type": "shell",
      "command": "make -C ${workspaceFolder}/firmware/myStorm oflash",
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}